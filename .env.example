# Environment (development | production)
NODE_ENV=development

# Telegram Bot
TELEGRAM_BOT_TOKEN=           # from @BotFather

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Database
DB_MODE=sqlite                    # sqlite | memory (memory = in-memory, data lost on restart)
DATABASE_PATH=./data/bot.db
MOCK_DATABASE_PATH=./data/mock.db  # separate database for mock portfolio (dev only)

# Web Interface (for testing without Telegram)
WEB_ENABLED=false             # set to true to enable web test interface
WEB_PORT=3000                 # port for web interface

# DCA Settings (mock mode - development only)
DCA_AMOUNT_SOL=0.01           # purchase amount in SOL
DCA_INTERVAL_MS=86400000      # interval between purchases in ms (default: 24h)
